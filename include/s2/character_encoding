#pragma once

struct utf8 {
  using storage_unit = uint8_t;
  template <typename It>
  static size_t encode(It output, char32_t chr);
  template <typename It>
  static char32_t decode(It iterator);
  template <typename It>
  static void walk(It iterator, int delta);
};

struct utf16 {
  using storage_unit = uint16_t;
  template <typename It>
  static size_t encode(It output, char32_t chr);
  template <typename It>
  static char32_t decode(It iterator);
  template <typename It>
  static void walk(It iterator, int delta);
};

struct ucs2 {
  using storage_unit = uint16_t;
